<?xml version="1.0"?>

<ruleset name="PHPCSStandard">

    <description>PSR-2</description>

    <file>bin</file>
    <file>config</file>
    <file>src</file>
    <file>test</file>

    <arg name="extensions" value="php"/>
    <arg name="parallel" value="100"/>
    <arg name="colors"/>
    <arg value="sp"/>

    <rule ref="PSR2"/>

    <!-- this rule is not PSR-2, but degrades code legibility, if enforced -->
    <rule ref="Squiz.WhiteSpace.ControlStructureSpacing.SpacingAfterOpen">
        <severity>0</severity>
    </rule>

    <!-- this rule is not PSR-2, but degrades code legibility, if enforced -->
    <rule ref="Squiz.WhiteSpace.ControlStructureSpacing.SpacingBeforeClose">
        <severity>0</severity>
    </rule>

</ruleset>
